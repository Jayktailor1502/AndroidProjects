<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomTextView">
        <attr name="fontName" format="string"/>
        <attr name="bold" format="boolean"/>
        <attr name="extraLeftPadding" format="boolean"/>
        <attr name="fontType" format="enum">
            <enum name="CPD" value="0"/>
            <enum name="Proxima" value="1"/>
        </attr>
        <attr name="hasShadow" format="boolean"/>
        <attr name="shadowColors" format="color"/>
        <attr name="android:shadowDx"/>
        <attr name="android:shadowDy"/>
        <attr name="android:shadowRadius"/>
    </declare-styleable>

    <declare-styleable name="CustomProgressBar">
        <attr name="pColor" format="color"/>
    </declare-styleable>


    <declare-styleable name="CompactCalendarView">
        <attr name="compactCalendarTextSize" format="dimension"/>
        <attr name="compactCalendarBackgroundColor" format="color"/>
        <attr name="compactCalendarCurrentDayBackgroundColor" format="color"/>
        <attr name="compactCalendarCurrentSelectedDayBackgroundColor" format="color"/>
        <attr name="compactCalendarTextColor" format="color"/>
        <attr name="compactCalendarMultiEventIndicatorColor" format="color"/>
        <attr name="compactCalendarTargetHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="MapViewPager">
        <attr name="markersAlpha" format="float" />
        <attr name="viewPagerWeight" format="integer" />
        <attr name="mapWeight" format="integer" />
        <attr name="mapGravity" format="integer" />
        <attr name="mapOffset" format="dimension" />
        <attr name="mapPaddingLeft" format="dimension" />
        <attr name="mapPaddingTop" format="dimension" />
        <attr name="mapPaddingRight" format="dimension" />
        <attr name="mapPaddingBottom" format="dimension" />
    </declare-styleable>


    <declare-styleable name="PickerImageView">
        <attr name="foreground" format="reference"/>
        <attr name="fit_mode" format="string"/>
    </declare-styleable>



    <declare-styleable name="PickerSquareView">
        <attr name="matchHeightToWidth" format="boolean"/>
        <attr name="matchWidthToHeight" format="boolean"/>
    </declare-styleable>


        <declare-styleable name="ExpandableTextView">
            <attr name="trimLength" format="integer"/>
        </declare-styleable>

</resources>
